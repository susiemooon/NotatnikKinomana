                    </LinearGradientBrush>
                </Setter.Value>

            </Setter>
            <Setter Property="Control.FontWeight" Value="ExtraLight"></Setter>
            <Setter Property="Control.FontSize" Value="14"></Setter>
            <Setter Property="Control.FontFamily" Value="Segoe UI"></Setter>
        </Style>

        <Style x:Key="ButtonAnuluj">

