                </Setter.Value>
            </Setter>
            <Setter Property="Control.FontFamily" Value="Segoe UI"></Setter>
            <Setter Property="Control.FontSize" Value="15"></Setter>
            <Setter Property="Control.FontWeight" Value="SemiBold"></Setter>
        </Style>

        <Style x:Key="ButtonRegister">

