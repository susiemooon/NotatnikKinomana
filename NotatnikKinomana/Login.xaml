<Window x:Class="NotatnikKinomana.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotatnikKinomana"
        mc:Ignorable="d"
        Title="Login" Height="140" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label HorizontalAlignment="Right" VerticalAlignment="Center">Nazwa użytkownika</Label>
        <TextBox Name="usernameTB" Grid.Column="1" VerticalAlignment="Center" Margin="8,8"></TextBox>
        <Label Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8,0">Hasło</Label>
        <PasswordBox Name="passwordTB" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="8,0"></PasswordBox>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Width="90" Height="30" Margin="8,8">Zaloguj</Button>
    </Grid>
</Window>
